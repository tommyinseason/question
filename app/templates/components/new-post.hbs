{{#if addNewPost}}
<h1 class="thin">New Question Post</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="question">Question:</label>
      {{input value=question id="question"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes:</label>
      {{input value=notes id="notes"}}
    </div>

    <button {{action 'addPost'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'postFormShow'}}>New Post</button>
{{/if}}
