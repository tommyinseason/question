<div class="row">
  <div class="col m12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">{{post.author}}</span>
        <h4>{{post.question}}</h4>
        <p>{{post.notes}}</p>
      </div>
      <div class="divider"></div>
      <div >
        <ul>
          {{#each model.answers as |answer|}}
            <li>{{answer.author}} {{answer.answer}}</li>
          {{/each}}
        </ul>

      </div>
      <div class="card-action">
        <button {{action 'delete' post}}>Delete</button>
      </div>
    </div>
  </div>
</div>
<div class="divider"></div>
